<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".modules.main.activity.MainActivity">

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slid_tab_layout_community"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tl_indicator_width_equal_title="true"
        app:tl_tab_space_equal="true"
        app:tl_indicator_color="@color/colorAccent"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_height="2dp"
        app:tl_textSelectColor="@color/color_common_main_txt"
        app:tl_textUnselectColor="@color/color_common_main_txt"
        app:tl_textsize="@dimen/common_h3_txt_size"
        app:tl_underline_color="@color/color_divider"
        app:tl_underline_gravity="BOTTOM"
        app:tl_underline_height="1px"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_community"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></android.support.v4.view.ViewPager>


</LinearLayout>